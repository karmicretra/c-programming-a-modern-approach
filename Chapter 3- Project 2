#include <stdio.h>
//Chapter 3. Project 2

void main()
{
    int itemNumber, month, date, year;
    float itemPrice;
    printf("Enter the item number: "); 
    scanf("%d", &itemNumber);
    printf("Enter the unit price: ");
    scanf("%f", &itemPrice);
    printf("Enter purchase date (mm/dd/yyyy): ");
    scanf("%d/%d/%d", &month, &date, &year);

    puts("Item \t\t\t\t\t Unit \t\t\t\t\t Purchase");
    puts("     \t\t\t\t\t Price\t\t\t\t\t Date");
    printf("%d \t\t\t\t\t $%.2f\t\t\t\t\t %d/%d/%d", itemNumber, itemPrice, month, date, year);
}

